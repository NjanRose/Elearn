<!-- Menu Horizontal -->
<ul class="menu">
<li class="current"><a href="/">Home</a></li>
<li><a href="/classes">Classes</a></li>
</ul>

<div class="grid">
<div class="col_12">
	<div class="col_9">
		{{#if success_msg}}
		<div class="notice success">
			{{success_msg}}
			<a href="#close" class="remove-icon"></a>
		</div>
		{{/if}}
		{{#if error_msg}}
		<div class="notice error">
			{{error_msg}}
			<a href="#close" class="remove-icon"></a>
		</div>
		{{/if}}
		{{#if error}}
		<div class="notice error">
			{{error}}
			<a href="#close" class="remove-icon"></a>
		</div>
		{{/if}}
	<h3>Welcome to eLearn</h3>
	<p><h6>eLearn is a simple and free online learning platform. Instructors can create courses and students
  can register for courses which include assignments, course materials and discussion forums.</h6></p>
  <a class = 'button' href='/users/register'>Sign Up FREE</a>
  <p><em>You need to Sign-Up to register for free classes.</em></p>
</div>

	<div class="col_3">
	{{>login}}
	</div>
	<hr />

	{{>classes}}
</div>

</div><!-- END GRID -->

