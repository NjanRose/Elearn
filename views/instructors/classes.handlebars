<!DOCTYPE html>
<html><head>
<title>Elearn</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<meta name="description" content="" />
<meta name="copyright" content="" />
<link rel="stylesheet" type="text/css" href="/stylesheets/kickstart.css" media="all" />                  <!-- KICKSTART -->
<link rel="stylesheet" type="text/css" href="/stylesheets/style.css" media="all" />                          <!-- CUSTOM STYLES -->
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script type="text/javascript" src="/javascripts/kickstart.js"></script>                                  <!-- KICKSTART -->
</head><body>

<!-- Menu Horizontal -->
<ul class="menu">
<li class="current"><a href="/">Home</a></li>
<li><a href="/classes">Classes</a></li>
</ul>
<div class="grid">
<div class="col_12">
  {{#if success_msg}}
	<div class="notice success">
		{{success_msg}}
		<a href="#close" class="remove-icon"></a>
	</div>
	{{/if}}
  <div class="col_9">
    <h2>{{instructor.first_name}}'s classes</h2>
    <table cellspacing="0" cellpadding="0">
      <thead>
        <tr>
          <th>Class ID</th>
          <th>Class Name</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each instructor.classes}}
        <th>{{class_id}}</th>
        <th>{{class_title}}</th>
        <th><a href="/classes/{{class_id}}/lessons">View classes</a></th>
        <th><a href="/instructors/classes/{{class_id}}/lessons/new">Add class</a></th>
        {{/each}}
      </tbody>
    </table>





</div>

  <div class="col_3">
  {{>login}}
  </div>
  <hr />
</div>

</div><!-- END GRID -->

<!-- ===================================== START FOOTER ===================================== -->
<div class="clear"></div>
<div id="footer">
&copy; Copyright 2020 All Rights Reserved. Elearn
</div>

</body></html>
