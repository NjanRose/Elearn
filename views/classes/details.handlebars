<!DOCTYPE html>
<html><head>
<title>Elearn</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<meta name="description" content="" />
<meta name="copyright" content="" />
<link rel="stylesheet" type="text/css" href="/stylesheets/kickstart.css" media="all" />                  <!-- KICKSTART -->
<link rel="stylesheet" type="text/css" href="/stylesheets/style.css" media="all" />                          <!-- CUSTOM STYLES -->
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script type="text/javascript" src="/javascripts/kickstart.js"></script>                                  <!-- KICKSTART -->
</head><body>

<!-- Menu Horizontal -->
<ul class="menu">
<li class="current"><a href="/">Home</a></li>
<li><a href="/classes">Classes</a></li>
</ul>

<div class="grid">
<div class="col_12">
  <div class="col_9">
    <h2>{{class.title}}</h2>
    <p>
    <h6><strong>Instructor: {{class.instructor}}</strong></h6>
    </p>
    <p>
      {{class.description}}
    </p>
    <ul class ="alt">
      {{#each class.lessons}}
      <li>{{lesson_title}}</li>
      {{/each}}
    </ul>

    {{#if user}}
    <form id = "classsRegForm" method="post" action="/{{type}}s/classes/register">
    <input type="hidden" name="student_id" value="{{user._id}}">
    <input type="hidden" name="class_id" value="{{class._id}}">
    <input type="hidden" name="class_title" value="{{class.title}}">
    <input type="submit" class="button" value="Register for this class">
    </form>
    {{else}}
    <p><em>You must be logged in to register for this class</em></p>
    {{/if}}
</div>

  <div class="col_3">
  {{>login}}
  </div>
  <hr />
</div>

</div><!-- END GRID -->

<!-- ===================================== START FOOTER ===================================== -->
<div class="clear"></div>
<div id="footer">
&copy; Copyright 2020 All Rights Reserved. Elearn
</div>

</body></html>
