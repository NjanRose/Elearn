<!DOCTYPE html>
<html><head>
<title>Elearn</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<meta name="description" content="" />
<meta name="copyright" content="" />
<link rel="stylesheet" type="text/css" href="/stylesheets/kickstart.css" media="all" />                  <!-- KICKSTART -->
<link rel="stylesheet" type="text/css" href="/stylesheets/style.css" media="all" />                          <!-- CUSTOM STYLES -->
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script type="text/javascript" src="/javascripts/kickstart.js"></script>                                  <!-- KICKSTART -->
</head><body>

<!-- Menu Horizontal -->
<ul class="menu">
<li class="current"><a href="/">Home</a></li>
<li><a href="/classes">Classes</a></li>
</ul>
<div class="grid">
<div class="col_12">
  <div class="col_9">
    <h2>Create an Account</h2>
    {{#if errors}}
      {{#each errors}}
          <div class="notice error"><i class="icon-remove-sign icon-large"></i>
                {{msg}}
          <a href="#close" class="icon-remove"></a></div>
      {{/each}}
    {{/if}}
    <form id = "regForm" method = "post" action="/users/register2">
       <div>
        <label>Account type</label>
        <select name="type">
          <option value="student">Student</option>
          <option value="instructor">Instructor</option>
        </select>
      </div><br>
      <div>
        <label>First Name: </label>
        <input type="text" name="first_name" value="{{first_name}}">
      </div><br>
      <div>
        <label>Last Name: </label>
        <input type="text" name="last_name" value="{{last_name}}">
      </div><br>
      <div>
        <label>Street Address: </label>
        <input type="text" name="street_address" value="{{street_address}}">
      </div><br>
      <div>
        <label>City: </label>
        <input type="text" name="city" value="{{city}}">
      </div><br>
      <div>
        <label>State: </label>
        <input type="text" name="state" value="{{state}}">
      </div><br>
      <div>
        <label>Zip: </label>
        <input type="text" name="zip" value="{{zip}}">
      </div><br>
      <div>
        <label>Email Address: </label>
        <input type="text" name="email" value="{{email}}">
      </div><br>
      <div>
        <label>Username: </label>
        <input type="text" name="username" value="{{username}}">
      </div><br>
      <div>
        <label>Password: </label>
        <input type="password" name="password" value="{{password}}">
      </div><br>
      <div>
        <label>Password Confirm: </label>
        <input type="password" name="password2" value="{{password2}}">
      </div><br>
      <div>
        <input type="submit" value="SignUp">
      </div><br>
    </form>
</div>

  <div class="col_3">
  {{>login}}
  </div>
  <hr />
</div>

</div><!-- END GRID -->

<!-- ===================================== START FOOTER ===================================== -->
<div class="clear"></div>
<div id="footer">
